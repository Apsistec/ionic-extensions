{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015"],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "importHelpers": true,
        "baseUrl": "./",
        "paths": {
            "@co.mmons/ionic-extensions/*": ["src/*"]
        }
    },

    "exclude": [
        "dist",
        "test",
        "tmp",
        "i18n",
        "node_modules"
    ]
}
